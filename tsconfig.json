{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "removeComments": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
